@model RegisterDTO

<div class="container">
    <h2 class="text-center">KAYIT OL</h2>
    <br />

    <div>
        <form asp-action="Register" asp-controller="UserRegister" method="post">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <label class="h6">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="h6">Şifre</label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <button type="submit" class="mt-3 text-center btn btn-success">Kayıt Ol</button>
            </div>
        </form>
    </div>
</div>
