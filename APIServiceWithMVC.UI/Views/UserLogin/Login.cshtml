@model LoginDTO

<div class="container">
    <h2 class="text-center">GİRİŞ YAP</h2>
    <br />

    <div>
        <form asp-action="Login" asp-controller="UserLogin" method="post">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <label class="h6">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="h6">Şifre</label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <button type="submit" class="mt-3 text-center btn btn-success">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>